@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function user(el) {
        var value = $(el).val();
        var modalDiv = $('#modalUserEdit');
        modalDiv.find('.modal-title span').html(value);
        modalDiv.modal({
            show: true,
        });
    }
</script>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Users</h1>

            <div>
                <h5><button type="button" class="btn btn-sm btn-success" data-toggle="modal" value="Create" onclick="user(this)">Create User</button></h5>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading"><b>Users</b></div>
                <div class="panel-body">
                    <div class="table table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>User01</td>
                                    <td>user01</td>
                                    <td>user01@gmail.com</td>
                                    <td>Manager</td>
                                    <td><button type="button" class="btn btn-sm" data-toggle="modal" value="Edit" onclick="user(this)">Edit</button> | <button type="button" class="btn btn-primary btn-sm" id="save">Delete</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalUserEdit" tabindex="-1" role="dialog" aria-labelledby="labelUserEdit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"><span></span> User</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-4">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">User Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="User Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">User Role</label>
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option selected>- Select -</option>
                                <option>Manager</option>
                                <option>Regular</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
